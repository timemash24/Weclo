<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/closet_bg">

    <RelativeLayout
        android:id="@+id/layout_weather"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="외출 예정시간" />
        <RadioGroup
            android:id="@+id/radiogroup_time"
            android:layout_below="@+id/text_time"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp">
            <RadioButton
                android:id="@+id/radio_4hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4시간 이내"
                android:textSize="15dp"/>
            <RadioButton
                android:id="@+id/radio_7hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5~7시간 후"
                android:textSize="15dp"/>
            <RadioButton
                android:id="@+id/radio_10hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8~10시간 후"
                android:textSize="15dp"/>
        </RadioGroup>

        <ImageView
            android:id="@+id/img_cSky"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_alignTop="@+id/text_time"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/radiogroup_time" />

        <TextView
            android:id="@+id/text_cCity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/img_cSky"
            android:text="도시"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/text_cTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/text_cCity"
            android:text="기온"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/text_cCelsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_cTemp"
            android:text="\u2103"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/text_cType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/text_cCity"
            android:layout_alignLeft="@+id/text_cCity"
            android:text="비/눈"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/text_cProb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/text_cType"
            android:layout_alignBottom="@+id/text_cType"
            android:text="강수확률"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_cProb"
            android:layout_alignTop="@+id/text_cProb"
            android:text="\u0025"
            android:textSize="40dp"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll_category"
        android:layout_below="@+id/layout_weather"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="135dp"
        android:layout_height="575dp">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_longtop"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="긴팔"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_shorttop"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="반팔"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_sleeveless"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="민소매"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_pants"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="긴바지"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_shorts"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="반바지"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_skirts"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="치마"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_onepiece"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="원피스"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_jacket"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="자켓"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_coat"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="코트"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_padding"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="패딩"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_sneakers"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="운동화"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_sandals"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="샌들"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_boots"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:text="부츠"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="605dp"
        android:layout_height="570dp"
        android:layout_alignTop="@+id/scroll_category"
        android:layout_toRightOf="@+id/scroll_category"
        android:layout_marginRight="10dp"
        android:numColumns="3"
        android:orientation="horizontal">

    </GridView>

    <LinearLayout
        android:id="@+id/selected_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridView"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_selectA"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/img_selectB"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/img_selectC"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/img_selectD"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_random"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_imgs"
        android:layout_marginLeft="80dp"
        android:background="@color/black"
        android:text="자동추천"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_combine"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_random"
        android:layout_alignTop="@+id/btn_random"
        android:layout_marginLeft="30dp"
        android:background="@color/black"
        android:text="선택 완료"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_combine"
        android:layout_toRightOf="@+id/btn_combine"
        android:layout_marginLeft="30dp"
        android:background="@color/black"
        android:text="다시선택"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_main"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_combine"
        android:layout_toRightOf="@+id/btn_retry"
        android:layout_marginLeft="30dp"
        android:text="메인으로"
        android:background="@color/black"
        android:textColor="@color/white" />

</RelativeLayout>